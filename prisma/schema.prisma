generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    email     String   @unique
    password  String
    money     Int      @default(0)
    role      Role     @default(USER)
    status    Status   @default(ACTIVE)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId String   @db.ObjectId
    name       String
    price      Int
    cpu        Int
    ram        Int
    os         String
    bandwidth  String
    status     Status   @default(ACTIVE)
    slug       String   @unique
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

model Category {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    slug      String    @unique
    products  Product[]
    status    Status    @default(ACTIVE)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}

enum Status {
    ACTIVE
    INACTIVE
}

enum Role {
    USER
    CTV
    ADMIN
}
